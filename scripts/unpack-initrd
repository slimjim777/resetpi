# -*- shell-script -*-

unpack_initrd() {
    # Mount system-boot
    systemboot="$(findfs LABEL=system-boot)"
    mkdir -p /systemboot
    mount $systemboot /systemboot

    # Unpack initrd from system-boot
    mkdir initrd
    cd initrd
    xz -dc < /systemboot/pi2-kernel_22.snap/initrd.img | cpio --quiet -i --make-directories
    cd ..
}